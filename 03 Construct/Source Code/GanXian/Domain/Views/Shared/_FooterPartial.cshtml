@if (string.IsNullOrEmpty(ViewBag.FooterType))
{
    <footer class="footer">
        <div class="foot-con">
            <div class="foot-con_2">
                @if (ViewContext.RouteData.Values["controller"].ToString().ToLower() == "index")
                {
                    <a href="~/index" class="active">
                        <i class="navIcon home"></i>
                        <span class="text">首页</span>
                    </a>
                }
                else
                {
                    <a href="~/index">
                        <i class="navIcon home"></i>
                        <span class="text">首页</span>
                    </a>
                }
                @if (ViewContext.RouteData.Values["controller"].ToString().ToLower() == "products")
                {
                    <a href="~/Products/Category" class="active">
                        <i class="navIcon sort"></i>
                        <span class="text">分类</span>
                    </a>
                }
                else
                {
                    <a href="~/Products/Category">
                        <i class="navIcon sort"></i>
                        <span class="text">分类</span>
                    </a>
                }
                <a href="~/Products/Shopcart">
                    <i class="navIcon shop"></i>
                    <span class="text">购物车</span>
                </a>
                @if (ViewContext.RouteData.Values["controller"].ToString().ToLower() == "user"
                    || ViewContext.RouteData.Values["controller"].ToString().ToLower() == "order")
                {
                    <a href="~/User/UserHome" class="active">
                        <i class="navIcon member"></i>
                        <span class="text">我的</span>
                    </a>
                }
                else
                {
                    <a href="~/User/UserHome">
                        <i class="navIcon member"></i>
                        <span class="text">我的</span>
                    </a>
                }
            </div>
        </div>
    </footer>
}